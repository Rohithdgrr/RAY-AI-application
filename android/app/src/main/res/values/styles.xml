<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Primary filled gradient button -->
    <style name="RayAI.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="background">@drawable/btn_primary_gradient</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">@dimen/material_button_corner_radius</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>

    <!-- Secondary outlined button -->
    <style name="RayAI.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:strokeWidth">@dimen/material_button_stroke_width</item>
        <item name="android:strokeColor">@color/primary</item>
        <item name="cornerRadius">@dimen/material_button_corner_radius</item>
        <item name="android:minHeight">48dp</item>
    </style>
    
    <!-- Circular icon button -->
    <style name="RayAI.IconButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/white</item>
        <item name="iconSize">20dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="background">@drawable/btn_primary_gradient</item>
        <item name="android:tint">@color/white</item>
        <item name="android:text"/>
    </style>
</resources>
