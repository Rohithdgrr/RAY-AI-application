<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/surface"
    app:strokeWidth="1dp"
    app:strokeColor="@color/divider_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row: Name, Badge, Status -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/nameContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/statusIcon"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/modelName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Model Name"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <!-- Tier Badge -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/tierBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginTop="6dp"
                    android:text="Balanced"
                    android:textSize="11sp"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/primary"
                    app:chipCornerRadius="8dp"
                    app:chipMinHeight="24dp"
                    app:chipMinTouchTargetSize="0dp"
                    app:ensureMinTouchTargetSize="false" />

                <!-- Usage Chip -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/usageChip"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginTop="2dp"
                    android:text="Text Generation"
                    android:textSize="10sp"
                    android:textColor="@color/text_primary"
                    app:chipBackgroundColor="@color/surface_variant"
                    app:chipCornerRadius="8dp"
                    app:chipMinHeight="24dp"
                    app:chipMinTouchTargetSize="0dp"
                    app:ensureMinTouchTargetSize="false" />

            </LinearLayout>

            <!-- Status Icon (Downloaded indicator) -->
            <ImageView
                android:id="@+id/statusIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@android:drawable/ic_menu_save"
                android:tint="@color/success"
                android:padding="6dp"
                android:background="@drawable/bg_status_icon"
                android:visibility="gone" />

        </RelativeLayout>

        <!-- Specs Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:baselineAligned="false">

            <!-- Memory Required -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Memory"
                    android:textSize="11sp"
                    android:textColor="@color/text_tertiary"
                    android:textAllCaps="true"
                    android:letterSpacing="0.05" />

                <TextView
                    android:id="@+id/modelTier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="~1200MB RAM"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="32dp"
                android:background="@color/divider_light"
                android:layout_marginHorizontal="12dp" />

            <!-- File Size -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Size"
                    android:textSize="11sp"
                    android:textColor="@color/text_tertiary"
                    android:textAllCaps="true"
                    android:letterSpacing="0.05" />

                <TextView
                    android:id="@+id/modelSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="~2.3 GB"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Progress Section (Downloading) -->
        <LinearLayout
            android:id="@+id/progressContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/modelProgress"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:progress="0"
                android:progressDrawable="@drawable/progress_bar_rounded"
                android:background="@drawable/progress_bar_bg" />

            <TextView
                android:id="@+id/downloadStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Downloading: 45% (1.2 / 2.3 GB)"
                android:textSize="12sp"
                android:textColor="@color/primary"
                android:layout_marginTop="6dp"
                android:gravity="center" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="end">

            <!-- Delete Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="Delete"
                android:textColor="@color/error"
                android:textSize="13sp"
                android:visibility="gone"
                android:layout_marginEnd="8dp" />

            <!-- Download Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDownload"
                style="@style/RayAI.Button.Primary"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Download"
                android:textSize="14sp"
                app:cornerRadius="14dp"
                app:icon="@android:drawable/stat_sys_download"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconSize="18dp" />

            <!-- Use Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUse"
                style="@style/RayAI.Button.Primary"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Use Model"
                android:textSize="14sp"
                android:visibility="gone"
                app:cornerRadius="14dp"
                app:icon="@android:drawable/ic_media_play"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconSize="18dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
