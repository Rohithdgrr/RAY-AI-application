<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="12dp"
    android:paddingVertical="6dp">

    <!-- User Message Container (Right aligned) -->
    <LinearLayout
        android:id="@+id/userMessageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        android:visibility="gone">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/bubbleLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="280dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/bubble_user_bg">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="14dp"
                android:paddingVertical="10dp">

                <TextView
                    android:id="@+id/messageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bubble_user_text"
                    android:textSize="15sp"
                    android:lineSpacingExtra="2dp"
                    android:autoLink="web|email|phone" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- User Message Actions: Copy, Edit -->
        <LinearLayout
            android:id="@+id/userActionsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="end">

            <ImageButton
                android:id="@+id/btnUserCopy"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_action_copy"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:padding="6dp"
                android:contentDescription="Copy" />

            <ImageButton
                android:id="@+id/btnUserEdit"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_action_edit"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:padding="6dp"
                android:contentDescription="Edit" />

        </LinearLayout>

        <!-- User Timestamp -->
        <TextView
            android:id="@+id/userTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:textColor="@color/text_tertiary"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- AI Message Container (Left aligned) -->
    <LinearLayout
        android:id="@+id/aiMessageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start"
        android:visibility="gone">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/aiBubbleLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="300dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/bubble_ai_bg">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="14dp"
                android:paddingVertical="10dp">

                <!-- Typing Indicator -->
                <ProgressBar
                    android:id="@+id/typingIndicator"
                    android:layout_width="40dp"
                    android:layout_height="24dp"
                    android:indeterminate="true"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/aiMessageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bubble_ai_text"
                    android:textSize="15sp"
                    android:lineSpacingExtra="2dp"
                    android:autoLink="web|email|phone" />

                <!-- Code Blocks Container -->
                <LinearLayout
                    android:id="@+id/codeBlocksContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- AI Message Actions: Copy, Download, Retry, Make Long, Make Short -->
        <LinearLayout
            android:id="@+id/aiActionsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="start">

            <ImageButton
                android:id="@+id/btnAiCopy"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_action_copy"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:padding="6dp"
                android:contentDescription="Copy"
                android:tint="@color/text_secondary" />

            <ImageButton
                android:id="@+id/btnAiDownload"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_action_download"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:padding="6dp"
                android:contentDescription="Download"
                android:tint="@color/text_secondary" />

            <ImageButton
                android:id="@+id/btnAiRetry"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_action_retry"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:padding="6dp"
                android:contentDescription="Regenerate"
                android:tint="@color/text_secondary" />

            <ImageButton
                android:id="@+id/btnAiLonger"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_action_longer"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:padding="6dp"
                android:contentDescription="Make Longer"
                android:tint="@color/text_secondary" />

            <ImageButton
                android:id="@+id/btnAiShorter"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_action_shorter"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:padding="6dp"
                android:contentDescription="Make Shorter"
                android:tint="@color/text_secondary" />

        </LinearLayout>

        <!-- AI Metadata Row -->
        <LinearLayout
            android:id="@+id/metadataLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/aiTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:textColor="@color/text_tertiary" />

            <TextView
                android:id="@+id/responseTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:textColor="@color/text_tertiary"
                android:layout_marginStart="8dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
